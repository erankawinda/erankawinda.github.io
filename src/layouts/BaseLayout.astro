---
const {
  title = "Eran Gamage — Data Scientist",
  description = "Minimalist portfolio: RAG, NLP, Energy Analytics, ZK."
} = Astro.props;
import "../styles/global.css";
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.svg" />
  </head>
  <body>
    <!-- Glass nav -->
    <header class="sticky top-0 z-20 border-b border-white/10 bg-slate-900/60 backdrop-blur">
      <div class="container-nice flex h-14 items-center justify-between">
        <a href="/" class="font-semibold tracking-tight">Eran</a>
        <nav class="flex items-center gap-6 text-sm text-slate-300">
          <a href="/projects" class="hover:text-white">Projects</a>
          <a href="/blog" class="hover:text-white">Blog</a>
          <a href="/about" class="hover:text-white">About</a>
          <a href="/contact" class="hover:text-white">Contact</a>
        </nav>
      </div>
    </header>

    <main class="container-nice py-14">
      <slot />
    </main>

    <footer class="container-nice py-10 text-sm text-slate-400">
      © {new Date().getFullYear()} Eran Dodampe Gamage · Built with Astro + Tailwind
    </footer>
  </body>
</html>
